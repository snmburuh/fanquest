{
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 2000
      }
    ]
  },
  "EndpointRateLimiting": {
    "Rules": [
      {
        "Endpoint": "POST:/api/quests/*/join",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/challenges/*/complete",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/payments/*",
        "Period": "1m",
        "Limit": 2
      }
    ]
  }
}